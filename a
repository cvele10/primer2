#include <iostream>

/* run this program using the console pauser or add your own getch, system("pause") or input loop */
using namespace std; 
int main(int argc, char** argv) {
	double racun, novac, kusur;
	cout<<"Vrednost racuna je"<<endl;
	cin>>racun;
	cout<<"Dato je"<<endl;
	cin>> novac;
	
	kusur=novac-racun;
	if(kusur< 0){
	
	cout<<"Dali ste mi manje para. Izvinite duzni ste mi jos"<<endl;
	kusur=kusur*(-1);
	cout<<kusur;
	}
	else{
	
	cout<<"Kusur je"<<endl;
	cout<<kusur;
	}
	return 0;
}
